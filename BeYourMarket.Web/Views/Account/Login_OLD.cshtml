@using BeYourMarket.Web.Models
@model LoginViewModel
@{
    ViewBag.Title = "[[[Login]]]";
}
<head>
    <link href="~/Content/home.css" rel="stylesheet" />
</head>

<div class="container-fluid form-custom">
    <div class=" center-block col-md-6">
        <div class="panel panel-default mrg-t">
            <div class="panel-body bdr-b panel-header">
                <h4>[[[Efetuar login em sua conta]]]</h4>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Login", "Account", new { returnUrl = ViewBag.ReturnUrl, oqeq = ViewBag.oqeq }, FormMethod.Post, new { role = "form", id = "loginForm" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        <label for="Email">@Html.LabelFor(m => m.Email) <span class="text-red">*</span></label>
                        <input class="form-control input-lg" id="Email" name="Email" placeholder="[[[Seu Email...]]]" type="text" value="" data-rule-email="email" data-rule-required="true">
                    </div>
                    <div class="form-group">
                        <label for="Password">@Html.LabelFor(m => m.Password) <span class="text-red">*</span></label>
                        <input class="form-control input-lg" id="Password" name="Password" placeholder="[[[Sua Senha...]]]" type="password" data-rule-required="true">
                    </div>
                    <div class="form-group">
                        <input type="checkbox" id="RememberMe" name="RememberMe" value="true" />
                        <label for="RememberMe">[[[Lembrar-me?]]]</label>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg">[[[Entrar]]]</button>
                }
            </div>
            <div class="panel-footer ">
                @Html.ActionLink("[[[Criar Conta]]]", "Register")
                <br />
                @Html.ActionLink("[[[Esqueceu sua Senha?]]]", "ForgotPassword")
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}