@model BeYourMarket.Web.Models.SearchListingModel

<head>
    <link href="~/Content/home.css" rel="stylesheet" />
</head>

@foreach (var item in Model.ListingsPageList.Take(3))
{
    <div class="col-sm-12 col-md-12 col-lg-4">
        <div class="card">

            <div class="card-image">
                <a href="@Url.Action("Listing", "Listing", new { id = Model.ListingsPageList[0].ListingCurrent.ID })">
                    <img alt="@Model.ListingsPageList[0].ListingCurrent.Title" src="@Model.ListingsPageList[0].UrlPicture">
                </a>
            </div>

            <div class="card-content">
                <a href="@Url.Action("Listing", "Listing", new { id = Model.ListingsPageList[0].ListingCurrent.ID })">
                    <h5 class="card-title">@Model.ListingsPageList[0].ListingCurrent.Title</h5>
                    <p class="truncate">
                        @Html.Raw(Model.ListingsPageList[0].ListingCurrent.Description)
                    </p>
                </a>
            </div>

            @*<div class="card-footer">
                    <a href="@Url.Action("Listing", "Listing", new { id = Model.ListingsPageList[0].ListingCurrent.ID })"><i class="fa fa-map-marker"></i> @Model.ListingsPageList[0].ListingCurrent.Location</a>
                    <p>
                        <span class="score @Model.ListingsPageList[0].ListingCurrent.RatingClass text-sm"></span>
                        @Model.ListingsPageList[0].ListingReviews.Count [[[avaliações]]]
                    </p>
                </div>*@

        </div>
    </div>
