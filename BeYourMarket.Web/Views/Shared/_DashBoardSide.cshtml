@using Microsoft.AspNet.Identity;

@model string

@{
    Layout = null;
}

<div class=" col-md-3">
    <ul class="nav nav-pills nav-stacked">
        <li class="@( Model == "tobuy" ? "active" : null )"><a href="@Url.Action("Index", "Manage", new { oqeq = 1 })"><i class="fa fa-th-list"></i> [[[Quero Comprar]]]</a></li>
        <li class="@( Model == "dashboard" ? "active" : null )"><a href="@Url.Action("Index", "Manage", new { oqeq = 0 })"><i class="fa fa-th-list"></i> [[[Quero Vender]]]</a></li>
        <li class="@( Model == "bestprice" ? "active" : null )"><a href="@Url.Action("Index", "Manage", new { oqeq = 3 })"><i class="fa fa-th-list"></i> [[[Cotação Itens]]]</a></li>
        <li class="@( Model == "messages" ? "active" : null )"><a href="@Url.Action("Messages", "Manage", new { oqeq = @ViewBag.oqeq })"><i class="fa fa-envelope"></i> [[[Mensagens]]]</a></li>

        @if (RazorHelper.IsPaymentSupport())
        {
            <li class="@( Model == "orders" ? "active" : null )"><a href="@Url.Action("Orders", "Payment", new { oqeq = @ViewBag.oqeq })"><i class="fa fa-shopping-cart"></i> [[[Pedidos]]]</a></li>
            <li class="@( Model == "transaction" ? "active" : null )"><a href="@Url.Action("Transaction", "Payment", new { oqeq = @ViewBag.oqeq })"><i class="fa fa-dollar"></i> [[[Transações]]]</a></li>
            <li class="@( Model == "payment" ? "active" : null )"><a href="@Url.Action("PaymentSetting", "Payment", new { oqeq = @ViewBag.oqeq })"><i class="fa fa-gears"></i> [[[Pagamentos]]]</a></li>
        }

        <li class="@( Model == "profile" ? "active" : null )"><a href="@Url.Action("UserProfile", "Manage", new { oqeq = @ViewBag.oqeq })"><i class="fa fa-user"></i> [[[Perfil]]]</a></li>
        <li class="@( Model == "settings" ? "active" : null )"><a href="@Url.Action("SettingsUpdate", "Settings", new { id = @ViewBag.idCB, oqeq = @ViewBag.oqeq })"><i class="fa fa-cogs"></i> [[[Configurações]]]</a></li>
        <li class="@( Model == "changepassword" ? "active" : null )"><a href="@Url.Action("ChangePassword", "Manage", new { oqeq = @ViewBag.oqeq })"><i class="fa fa-key"></i> [[[Alterar senha]]]</a></li>


        @if (User.IsInRole("Administrator"))
        {
    <li><a target="_blank" href="@Url.Action("Manage", "Admin")"><i class="fa fa-desktop"></i> [[[Admin]]]</a></li>}
    </ul>
</div>


