@model BeYourMarket.Model.Models.Setting

@{
    ViewBag.Title = "[[[Configurações]]]";
}

<div class="wraper container-fluid">

    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-heading"><h3 class="panel-title">[[[Configurações]]]</h3></div>
                <div class="panel-body">
                    <form action="@Url.Action("SettingsUpdate", "Manage")" id="settingsForm" method="post" class="form-horizontal" role="form">
                        <input type="hidden" name="ID" id="ID" value="@Model.ID" />
                        
                        <h4><i class="fa fa-gears"></i> Geral</h4>
                        <hr />

                        <div class="form-group">
                            <label class="col-md-2 control-label">[[[Nome]]]</label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label">[[[Descrição]]]</label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" id="Description" name="Description" value="@Model.Description" required>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label">[[[Slogan]]]</label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" id="Slogan" name="Slogan" value="@Model.Slogan" required>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label">[[[PlaceHolder Pesquisar]]]</label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" id="SearchPlaceHolder" name="SearchPlaceHolder" value="@Model.SearchPlaceHolder" required>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label" for="EmailContact">[[[Email]]]</label>
                            <div class="col-md-10">
                                <input type="email" id="EmailContact" name="EmailContact" class="form-control" placeholder="[[[Email]]]" value="@Model.EmailContact" required>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">[[[Versão]]]</label>
                            <div class="col-sm-10">
                                <p class="form-control-static">@Model.Version</p>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label" for="Currency">[[[Moeda]]]</label>
                            <div class="col-md-10">
                                <input type="text" id="Currency" name="Currency" class="form-control" placeholder="[[[Moeda]]]" value="@Model.Currency" maxlength="3" required>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label" for="EmailConfirmedRequired">[[[Confirmação de Email]]]</label>
                            <div class="col-md-10">
                                <label class="cr-styled control-label">
                                    <input checked="@Model.EmailConfirmedRequired" id="EmailConfirmedRequired" name="EmailConfirmedRequired" type="checkbox" value="true" />
                                    <i class="fa"></i>
                                    [[[Habilitado]]]
                                </label>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label" for="Theme">[[[Tema]]]</label>
                            <div class="col-md-10">
                                <input type="text" id="Theme" name="Theme" class="form-control" placeholder="[[[Tema]]]" value="@Model.Theme" required>
                            </div>
                        </div>

                        <h4><i class="fa fa-flag-checkered"></i> Acordo</h4>
                        <hr />

                        <div class="form-group">
                            <label class="col-md-2 control-label" for="AgreementRequired">[[[Acordo Obrigatório]]]</label>
                            <div class="col-md-10">
                                <label class="cr-styled control-label">
                                    <input checked="@Model.AgreementRequired" id="AgreementRequired" name="AgreementRequired" type="checkbox" value="true" />
                                    <i class="fa"></i>
                                    [[[Habilitado]]]
                                </label>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label" for="AgreementLabel">[[[Etiqueta do Acordo]]]</label>
                            <div class="col-md-10">
                                <input type="text" id="AgreementLabel" name="AgreementLabel" class="form-control" placeholder="[[[Este texto será mostrado próximo a uma caixa de seleção no formulário de checkout]]]" value="@Model.AgreementLabel">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label" for="SignupText">[[[Texto do Acordo]]]</label>
                            <div class="col-md-10">
                                <textarea class="form-control" rows="4" placeholder="[[[Este é o conteúdo do contrato real que o usuário deve aceitar.]]]" id="AgreementText" name="AgreementText">@Model.AgreementText</textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label" for="AgreementText">[[[Texto de inscrição]]]</label>
                            <div class="col-md-10">
                                <textarea class="form-control" rows="4" placeholder="[[[Este é um texto informativo que pode ser mostrado aos usuários na página de inscrição. Lá você pode dar aos usuários instruções para se inscrever, informações como onde obter um convite, etc. Por padrão, não há instruções.]]]" id="SignupText" name="SignupText">@Model.SignupText</textarea>
                            </div>
                        </div>

                        <h4><i class="fa fa-comments"></i> Review</h4>
                        <hr />

                        <div class="form-group">
                            <label class="col-md-2 control-label" for="ListingReviewEnabled">[[[Permitir revisão de listagem]]]</label>
                            <div class="col-md-10">
                                <label class="cr-styled control-label">
                                    <input checked="@Model.ListingReviewEnabled" id="ListingReviewEnabled" name="ListingReviewEnabled" type="checkbox" value="true" />
                                    <i class="fa"></i>
                                    [[[Habilitado]]]
                                </label>                                
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label" for="ListingReviewMaxPerDay">[[[Máx. Revisão por dia]]]</label>
                            <div class="col-md-10">
                                <input type="number" min="1" id="ListingReviewMaxPerDay" name="ListingReviewMaxPerDay" class="form-control" value="@Model.ListingReviewMaxPerDay" required>
                            </div>
                        </div>

                        <h4><i class="fa fa-calendar"></i> Formato de data / hora</h4>
                        <hr />

                        <div class="form-group">
                            <label class="col-md-2 control-label" for="DateFormat">[[[Formato da Data]]]</label>
                            <div class="col-md-10">
                                <input type="text" id="DateFormat" name="DateFormat" class="form-control" value="@Model.DateFormat" required>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label" for="TimeFormat">[[[Formato da Hora]]]</label>
                            <div class="col-md-10">
                                <input type="text" id="TimeFormat" name="TimeFormat" class="form-control" value="@Model.TimeFormat" required>
                            </div>
                        </div>

                        <div class="alert alert-info col-md-offset-2">
                            <a href="https://msdn.microsoft.com/en-us/library/az4se3k1(v=vs.110).aspx" target="_blank">[[[Documentação sobre formato de data e hora.]]]</a>
                        </div>

                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-primary" type="submit"><i class="fa fa-save"></i> [[[Salvar]]]</button>
                                <a href="@Url.Action("Settings", "Manage")" class="btn btn-default"><i class="fa fa-remove"></i> [[[Cancelar]]]</a>
                            </div>
                        </div>

                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}